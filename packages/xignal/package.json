{
	"name": "xignal",
	"version": "0.0.26",
	"description": "signals state management for real",
	"keywords": [
		"xignal",
		"signal"
	],
	"license": "MIT",
	"author": {
		"name": "flamrdevs"
	},
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./storage": {
			"types": "./dist/storage/index.d.ts",
			"default": "./dist/storage/index.js"
		},
		"./storage/driver": {
			"types": "./dist/storage/driver.d.ts",
			"default": "./dist/storage/driver.js"
		},
		"./standard-schema": {
			"types": "./dist/standard-schema/index.d.ts",
			"default": "./dist/standard-schema/index.js"
		},
		"./standard-schema/storage": {
			"types": "./dist/standard-schema/storage.d.ts",
			"default": "./dist/standard-schema/storage.js"
		}
	},
	"files": [
		"dist"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/flamrdevs/xignal.git",
		"directory": "packages/xignal"
	},
	"scripts": {
		"build": "tsdown"
	},
	"dependencies": {
		"@standard-schema/spec": "^1.0.0",
		"alien-signals": "^2.0.6"
	},
	"publishConfig": {
		"access": "public"
	}
}
