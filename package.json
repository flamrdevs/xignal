{
	"name": "root",
	"type": "module",
	"private": true,
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"prepare": "husky",
		"build:packages": "turbo build --filter=\"./packages/*\"",
		"pretest": "pnpm run build:packages",
		"test": "cross-env VITEST_BROWSER_HEADLESS=true vitest run",
		"pretestui": "pnpm run build:packages",
		"testui": "cross-env VITEST_UI=true vitest --ui",
		"prepublint": "pnpm run build:packages",
		"publint": "pnpm --parallel --filter=xignal --filter=\"@xignal/*\" exec publint",
		"prerelease": "pnpm run publint",
		"release": "pnpm publish -r",
		"format": "biome check --write",
		"inspect": "pnpx node-modules-inspector"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@changesets/cli": "^2.29.3",
		"@preact/preset-vite": "^2.10.1",
		"@private/tests": "workspace:*",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@types/node": "^22.15.15",
		"@vitejs/plugin-react": "^4.4.1",
		"@vitejs/plugin-vue": "^5.2.3",
		"@vitest/browser": "^3.1.3",
		"@vitest/ui": "^3.1.3",
		"arktype": "^2.1.20",
		"cross-env": "^7.0.3",
		"es-toolkit": "^1.37.2",
		"husky": "^9.1.7",
		"playwright": "^1.52.0",
		"publint": "^0.3.12",
		"tsdown": "0.11.1",
		"turbo": "^2.5.3",
		"valibot": "^1.1.0",
		"vite-plugin-solid": "^2.11.6",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.1.3",
		"zod": "^3.24.4"
	},
	"packageManager": "pnpm@10.8.1",
	"engines": {
		"node": ">=23.0.0"
	}
}
