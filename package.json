{
	"name": "root",
	"type": "module",
	"private": true,
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"prepare": "husky",
		"build:packages": "turbo build --filter=\"./packages/*\"",
		"pretest": "pnpm run build:packages",
		"test": "VITEST_BROWSER_HEADLESS=true vitest run",
		"pretestui": "pnpm run build:packages",
		"testui": "VITEST_UI=true vitest --ui",
		"prerelease": "pnpm run build:packages",
		"release": "pnpm publish -r",
		"format": "biome check --write",
		"inspect": "pnpx node-modules-inspector"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.0",
		"@changesets/cli": "^2.29.6",
		"@preact/preset-vite": "^2.10.1",
		"@private/tests": "workspace:*",
		"@sveltejs/vite-plugin-svelte": "^6.1.2",
		"@types/node": "^24.3.0",
		"@vitejs/plugin-react": "^5.0.0",
		"@vitejs/plugin-vue": "6.0.1",
		"@vitest/browser": "^3.2.0",
		"@vitest/ui": "^3.2.0",
		"arktype": "^2.1.20",
		"es-toolkit": "^1.39.10",
		"husky": "^9.1.7",
		"playwright": "^1.54.2",
		"publint": "^0.3.12",
		"tsdown": "0.14.1",
		"turbo": "^2.5.6",
		"valibot": "^1.1.0",
		"vite-plugin-solid": "^2.11.8",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.2.0",
		"zod": "4.0.17"
	},
	"packageManager": "pnpm@10.10.0",
	"engines": {
		"node": ">=23.0.0"
	}
}
